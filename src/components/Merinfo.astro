<!-- JavaScript til at tilføje animationer ved scroll -->
<script>
  // Funktion til at observere, hvornår billederne er synlige og aktivere animationen
  function animateOnScroll() {
    // Find alle billeder med klassen 'info-img'
    const images = document.querySelectorAll(".info-img");

    // Skab en observer til at observere billederne, når de er synlige
    const observer = new IntersectionObserver(
      (entries, observer) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            // Tjek om det er et billede fra den øverste række eller nederste række
            if (entry.target.src.includes("info_1") || entry.target.src.includes("info_2") || entry.target.src.includes("info_3") || entry.target.src.includes("info_4")) {
              // Tilføj animationen for venstre indgang med langsom hastighed
              entry.target.classList.add("animate__animated", "animate__slideInLeft", "animate__slow");
            } else {
              // Tilføj animationen for højre indgang med langsom hastighed
              entry.target.classList.add("animate__animated", "animate__slideInRight", "animate__slow");
            }
            // Stop observeren for dette element
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.5 }
    ); // Observer når 50% af elementet er synligt på skærmen

    // Start observeren for alle billeder
    images.forEach((img) => observer.observe(img));
  }

  // Initialiser scroll animationer når siden er klar
  document.addEventListener("DOMContentLoaded", animateOnScroll);
</script>
